<%= render 'shared/flash_messages' %>
<h1>Rooms#index</h1>
<p>NowUser : <%= current_user.email %></p>
<p>Find me in app/views/rooms/index.html.erb</p>
<p><%= link_to "新しい部屋を作成する", new_room_path %></p>
<% @rooms.each do |room| %>
  <table>
  <tbody>
  <tr>
    <td>
      <span>部屋ID: </span><%= room.id %>
      <span>部屋名: </span><%=link_to room.room_name, room_path(room.id) %>
      <span>email: </span><%=link_to room.user.email, user_path(room.user.id) %>
    </td>
    <td>
      <%= link_to "編集", edit_room_path(room) %>
      <%= link_to "削除", room_path(room), method: :delete, data: {confirm: "削除しますか？"} %>
    </td>
  </tr>
  </tbody>
  </table>
<% end %>