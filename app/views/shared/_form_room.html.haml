.wrapper
  %aside.main-sidebar.sidebar-dark-primary.elevation-4
  .content-wrapper
    .container-fluid
      .row.mb-2
      %hr
        .col-sm-6
          %h1.m-0.text-dark 新しい部屋の作成
          = form_with model: @room, local: true do|f|
            %label RoomName
            .form-group
              = f.text_field :room_name, |
                class: 'form-control', |
                required: true |
            .form-group
              = f.submit value: '送信', class: 'btn btn-primary btn-block'
          %p= link_to '部屋の一覧画面へ戻る', rooms_path